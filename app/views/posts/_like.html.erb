<% if current_user.liked_by(post.id).present? %>    
  <%= link_to post_like_path(post, current_user.liked_by(post.id)), class: "like-link", method: :delete, remote: true do %>
    <i class="fas fa-heart fa-lg like-color"></i>
  <% end %>
  <%= post.likes.count %>
<% else %>
  <%= link_to post_likes_path(post), class: "like-link", method: :post, remote: true do %>
    <i class="far fa-heart fa-lg unlike-color"></i>
  <% end %>
  <%= post.likes.count %>
<% end %>